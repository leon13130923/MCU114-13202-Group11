<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddTaskFragment"
    android:padding="20dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvTitleTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增任務"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 課程名稱 -->
    <EditText
        android:id="@+id/etCourseTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="課程名稱"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleTask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 任務名稱 -->
    <EditText
        android:id="@+id/etTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="任務名稱"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etCourseTask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 截止日期 -->
    <EditText
        android:id="@+id/etDeadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="截止日期"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etTask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnTaskCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"

        android:text="取消"
        app:layout_constraintEnd_toStartOf="@id/btnTaskConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDeadline"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/btnTaskConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="加入任務"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnTaskCancel"
        app:layout_constraintTop_toTopOf="@+id/btnTaskCancel"
        app:layout_constraintWidth_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>