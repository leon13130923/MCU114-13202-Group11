<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SideDishesActivity">

    <TextView
        android:id="@+id/tvSideTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="Select Side Dishes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tvSideTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvSideTitle"
        android:layout_marginTop="20dp" >

        <RadioButton
            android:id="@+id/radioBtnFries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fries" />

        <RadioButton
            android:id="@+id/radioBtnSalad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salad" />

        <RadioButton
            android:id="@+id/radioButCornCup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Corn Cup" />
    </RadioGroup>

    <Button
        android:id="@+id/btnDoneS"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Done"
        app:layout_constraintStart_toStartOf="@+id/radioGroupS"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupS" />

</androidx.constraintlayout.widget.ConstraintLayout>